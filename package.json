{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liangskyli/mock.git"
  },
  "scripts": {
    "prepare": "husky install",
    "test-http-cli": "lerna run --scope @liangskyli/mock test-http-cli",
    "test:middleware": "lerna run --scope @liangskyli/mock test:middleware",
    "test-http-mock-code-gen": "lerna run --scope @liangskyli/http-mock-gen test-http-mock-code-gen",
    "test-grpc-mock-code-gen": "lerna run --scope @liangskyli/grpc-mock test-grpc-mock-code-gen",
    "version:pre": "echo '发布预发布beta版本' && HUSKY=1 lerna version prerelease --preid beta",
    "version:preminor": "echo '发布小版本beta版本' && HUSKY=1 lerna version preminor --preid beta",
    "version:premajor": "echo '发布主版本beta版本' && HUSKY=1 lerna version premajor --preid beta",
    "version:patch": "echo '发布补丁版本' && HUSKY=1 lerna version patch",
    "version:minor": "echo '发布小版本' && HUSKY=1 lerna version minor",
    "version:major": "echo '发布主版本' && HUSKY=1 lerna version major",
    "publish-all": "lerna publish from-package --yes",
    "publish-all-pre": "lerna publish from-package --canary --preid beta",
    "update:deps": "yarn upgrade-interactive --latest"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/config-lerna-scopes": "^16.0.0",
    "@types/prettier": "^2.4.2",
    "@umijs/fabric": "^2.10.1",
    "cross-env": "^7.0.3",
    "gts": "^3.1.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
